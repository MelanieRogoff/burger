<h1 id="title">Eat-Da-Burger!</h1>

<img id="burgerPic" src="../img/burger.png">

<ul>
    <h2 id="toTheLeft">Burgers to be Devoured</h2>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
    <h2 id="toTheRight">Devoured Burgers</h2>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h3 id="burgerAdd">Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="name">
  </div>

  <button id="burgerBtn" type="submit">Submit</button>
</form>
  <audio id="music" src="../eat.mp3" controls> </audio>




