<h1 id="title">Eat-Da-Burger!</h1>

<img id="burgerPic" src="../img/burger.png">

<ul class="toTheLeft">
    <h2>Burgers to be Devoured</h2>
  {{#each burger}}
    {{#unless this.devoured}}
    <li>
    {{this.burger_name}}
    	<button class="toBeDevoured" data-id="{{this.id}}">Devour it!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<ul class="toTheRight">
    <h2>Devoured Burgers</h2>
    {{#each burger}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h3 id="burgerAdd">Add a Burger</h3>
<form class="create-form">
  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="name">
  </div>

  <button id="burgerBtn" type="submit">Submit</button>
</form>
