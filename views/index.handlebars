<h1 id="title">Eat-Da-Burger!</h1>

<img id="burgerPic" src="../img/burger.png">

<ul id="toTheLeft">
    <h2 class="list-group">Burgers to be Devoured</h2>
  {{#each burger}}
    {{#unless this.devoured}}
    <li>
    {{this.burger_name}}
    <button type="button" id="devourBtn" class="toBeDevoured btn btn-info btn-sm"data-id="{{this.id}}">Devour it!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<ul id="toTheRight">
    <h2 class="list-group">Devoured Burgers</h2>
    {{#each burger}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>


<h3 id="burgerAdd">Add a Burger</h3>
<form class="create-form">
  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="name">
  </div>

  <button class="btn btn-info" id="burgerBtn" type="submit">Submit</button>
</form>

<audio id="music" controls loop src=".../../music/theme.mp3"></audio> 



